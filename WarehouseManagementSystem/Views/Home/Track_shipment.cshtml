
@{
    ViewBag.Title = "track_shipment";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="inner-banner">
    <div class="thm-container">
        <h2>Career</h2>
        <ul class="breadcumb">
            <li><a href=@Url.Action("/Index")><i class="fa fa-home"></i> Home</a></li>
            <li><span>Career</span></li>
        </ul>
    </div>
</section>


<section class="sec-padding  faq-page career-page">
    <div class="thm-container">
        <div class="row">
            <div class="col-md-4 pull-left">
                <div class="single-sidebar-widget">
                    <div class="special-links">
                        <ul>
                            <li class="active"><a href=@Url.Action("/Company_history")>Company History</a></li>
                            <li><a href=@Url.Action("/Career")>Career</a></li>
                            <li><a href=@Url.Action("/Caq")>FaQs</a></li>
                            <li><a href=@Url.Action("/Clients")>Our Clients</a></li>
                            <li ><a href=@Url.Action("/Testimonials")>Testimonials</a></li>
                            <li class="active"><a href=@Url.Action("/Track_shipment")>track your shipment</a></li>
                        </ul>
                    </div>
                </div>
                <div class="single-sidebar-widget">
                    <div class="sec-title">
                        <h2><span>Download brochure</span></h2>
                    </div>
                    <div class="dwnld-broucher">
                        <img src="/Content/images/dwnld-broucher.png" alt="Awesome Image" />
                        <a href="#">download as pdf &nbsp;&nbsp;<i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-8 pull-right">
                <div class="sec-title">
                    <h2><span>Track any Freight Management shipment</span></h2>
                    <p>Track any BestLogistics Freight Management shipment. If you require maximum visibility to your customer Freight Management transactions, contact your BestLogistics Representative, or local BestLogistics Service Center.</p>
                </div>

                <form action="#" class="contact-form track-shipment-form">
                    <ul>
                        <li class="clearfix">
                            <div class="label">
                                Transportation Mode
                            </div>
                            <div class="content">
                                <ul class="radio-box">
                                    <li><input type="radio"> <span>Air Ground</span></li>
                                    <li><input type="radio"> <span>Ocean Freight</span></li>
                                    <li><input type="radio"> <span>Brokerage</span></li>
                                    <li><input type="radio"> <span>All</span></li>
                                </ul>
                            </div>
                        </li>
                        <li class="clearfix">
                            <div class="label">
                                Search type
                            </div>
                            <div class="content">
                                <select class="select-menu">
                                    <option value="House Waybill">House Waybill</option>
                                    <option value="House Waybill 2">House Waybill 2</option>
                                    <option value="House Waybill 3">House Waybill 3</option>
                                    <option value="House Waybill 4">House Waybill 4</option>
                                </select>
                            </div>
                        </li>
                        <li class="clearfix">
                            <div class="label">
                                Search Number(s)*
                            </div>
                            <div class="content">
                                <textarea></textarea>
                                <div class="button-holder clearfix">
                                    <button type="submit" class="thm-btn pull-left">Track Now <i class="fa fa-arrow-right"></i></button>
                                    <button class="pull-right" type="reset"><i class="fa fa-rotate-left"></i> Reset</button>
                                </div>
                                <br><br>

                                <p>This will return up to 100 records matching your criteria.</p>
                            </div>
                        </li>
                    </ul>
                </form>

            </div>
        </div>
    </div>
</section>

